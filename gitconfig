[user]
    name = Thomas Wienecke
    email = wienecke.t@gmail.com
[core]
    editor = nvim
    pager = less -F -X
[diff]
    tool = nvim -d
[difftool]
    prompt = false
[alias]
    dt = difftool
    tf = diff
    df = diff

[http]
	postBuffer = 1048576000
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    ds = diff --staged
    dh1 = diff HEAD~1
    pom = push origin master
    amend = commit --amend
    lg = log -p
    lob = log --graph --decorate --pretty=oneline --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=20
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    task = !nvim .git/task
    difftex = difftool -y -t latex

  # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash
[push]
    default = tracking
[difftool.latex]
    cmd = latexdiff --flatten "$LOCAL" "$REMOTE"
