[user]
    name = Thomas Wienecke
    email = thomas.wienecke@omikron.net
[core]
    editor = nvim
    autocrlf = false
[diff]
    tool = nvim -d
[difftool]
    prompt = false
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    ds = diff --staged
    pom = push origin master
    amend = commit --amend
    lg = log -p
    lob = log --graph --decorate --pretty=oneline --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=20
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    ign = ls-files -o -i --exclude-standard
    fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash
[push]
    default = current
[merge]
    tool = vimdiff
[mergetool]
    path = nvim
[rerere]
    enabled = true
[branch]
    autosetuprebase = always
