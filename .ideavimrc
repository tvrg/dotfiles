set NERDTree
set surround

nmap g] :action GotoImplementation<CR>
nmap gr :action ShowUsages<CR>
nmap gs :action GotoSuperMethod<CR>
nmap ,wl :action MoveTabRight<CR>
nmap ,wh :action MoveTabLeft<CR>
nmap ]m :action MethodDown<CR>
nmap [m :action MethodUp<CR>
nmap ]q :action NextOccurence<CR>
nmap [q :action PreviousOccurence<CR>
nmap ,rc :e ~/.ideavimrc<CR>
nmap ,rl :so ~/.ideavimrc<CR>
nmap ,y "+y
nmap ,d "+d
nmap ,p "+p
nmap ,P "+P
vmap ,y "+y
vmap ,d "+d
vmap ,p "+p
vmap ,P "+P
nnoremap \ ,
nmap <C-h> <C-W>h
nmap <C-l> <C-W>l
nmap <C-k> <C-W>k
nmap <C-j> <C-W>j
set incsearch
set ignorecase smartcase
set number


nmap ,n :NERDTreeToggle<CR>
nmap ,rf :NERDTreeFind<CR>
